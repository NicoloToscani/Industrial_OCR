<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="advmobdev.unipr.it.ocr">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="advmobdev.unipr.it.ocr.OCR"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="advmobdev.unipr.it.ocr.LabelActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="advmobdev.unipr.it.ocr.PrepocessingActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="advmobdev.unipr.it.ocr.LiveCameraActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait" />

        <activity
            android:name="advmobdev.unipr.it.ocr.SettingsListActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name="advmobdev.unipr.it.ocr.BinarizationActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name="advmobdev.unipr.it.ocr.MorphologicalActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name="advmobdev.unipr.it.ocr.HistogramEqualizationActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name="advmobdev.unipr.it.ocr.SharpeningActivity"
            android:theme="@style/AppTheme" />


    </application>


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.front" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.front.autofocus" android:required="false"/>


</manifest>